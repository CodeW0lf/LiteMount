<Script file="Mounts.lua" />

<!--
    See OptionsBaseCheckButtonTemplate in FrameXML/OptionsPanelTemplates.xml
    We don't use it directly because of the hitrect crap we don't want.
 -->
<CheckButton name="LM_OptionsUIMountsFlagTemplate" virtual="true">
    <Size x="26" y="26" />
    <Scripts>
        <OnClick>
            LM_OptionsUIMountsFlag_OnClick(self)
        </OnClick>
    </Scripts>
    <NormalTexture urgency="5" file="Interface\Buttons\UI-CheckBox-Up"/>
    <PushedTexture urgency="5" file="Interface\Buttons\UI-CheckBox-Down"/>
    <HighlightTexture urgency="5" file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
    <CheckedTexture urgency="5" file="Interface\Buttons\UI-CheckBox-Check"/>
    <DisabledCheckedTexture urgency="5" file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>
    <Layers>
        <Layer level="BACKGROUND">
            <Texture name="$parentModified" alphaMode="ADD" hidden="true" parentKey="modified">
                <Color r="0.5" g="0.0" b="0.0" />
                <Anchors>
                    <Anchor point="TOPLEFT" x="5" y="-5" />
                    <Anchor point="BOTTOMRIGHT" x="-6" y="6" />
                </Anchors>
            </Texture>
        </Layer>
    </Layers>
</CheckButton>

<Button name="LM_OptionsUIMountsButtonTemplate" virtual="true">

    <Size x="180" y="45" />

    <Backdrop edgefile="Interface\Tooltips\UI-Tooltip-Border" bgfile="Interface\Tooltips\UI-Tooltip-Background" tile="true">
        <EdgeSize val="8" />
        <TileSize val="8" />
        <BackgroundInsets>
            <AbsInset left="1" right="1" top="1" bottom="1" />
        </BackgroundInsets>
    </Backdrop>

    <Scripts>
        <OnLoad>
            self:SetBackdropBorderColor(0.3, 0.3, 0.3, 0.3)
            self:SetBackdropColor(0.3, 0.3, 0.3, 0.3)
        </OnLoad>
    </Scripts>

    <Frames>
        <CheckButton name="$parentEnabled" parentKey="enabled">
            <Size x="32" y="32" />
            <Anchors>
                <Anchor point="LEFT" x="2" />
            </Anchors>
            <Scripts>
                <OnClick function="BlizzardOptionsPanel_CheckButton_OnClick" />
                <OnEnter>
                    GameTooltip:SetOwner(self, "ANCHOR_RIGHT")
                    if self:GetChecked() then
                        GameTooltip:SetText(DISABLE, 1, 0, 0)
                    else
                        GameTooltip:SetText(ENABLE, 0, 1, 0)
                    end
                </OnEnter>
                <OnLeave>
                    GameTooltip:Hide()
                </OnLeave>
            </Scripts>
            <NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
            <PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
            <HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
            <CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
            <DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>
        </CheckButton>

        <Button name="$parentIcon" parentKey="icon" inherits="SecureActionButtonTemplate" frameStrata="HIGH" motionScriptsWhileDisabled="true">
            <Size x="36" y="36" />
            <Anchors>
                <Anchor point="LEFT" relativeKey="$parent.enabled" relativePoint="RIGHT" x="2" />
            </Anchors>
            <HighlightTexture name="$parentHighlight" file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD" />

            <Layers>
                <Layer level="OVERLAY">
                    <Texture name="$parentUnusable" setAllPoints="true" hidden="true" parentKey="unusable">
                        <Color r="1" g="0" b="0" />
                    </Texture>
                </Layer>
            </Layers>

            <Scripts>
                <OnEnter>
                    local m = self:GetParent().mount

                    GameTooltip:SetOwner(self, "ANCHOR_RIGHT", 8)
                    if m.mountID then
                        GameTooltip:SetMountBySpellID(m.spellID)
                    else
                        GameTooltip:SetSpellByID(m.spellID)
                    end
                    if m:IsUsable() then
                        GameTooltip:AddLine("|cffff00ff" .. HELPFRAME_REPORT_PLAYER_RIGHT_CLICK .. ": " .. MOUNT .. "|r")
                    end
                    GameTooltip:Show()

                    if m.modelID then
                        LM_OptionsUIMountsPreview.model:SetDisplayInfo(m.modelID)
                        if m.isSelfMount then
                            LM_OptionsUIMountsPreview.model:SetDoBlend(false)
                            LM_OptionsUIMountsPreview.model:SetAnimation(618, -1)
                        end
                        LM_OptionsUIMountsPreview:Show()
                    else
                        LM_OptionsUIMountsPreview:Hide()
                    end
                </OnEnter>
                <OnLeave>
                    LM_OptionsUIMountsPreview:Hide()
                    GameTooltip:Hide()
                </OnLeave>
                <OnLoad>
                    self:SetAttribute("unit", "player")
                    self:RegisterForClicks("RightButtonUp")
                    self:RegisterForDrag("LeftButton")
                </OnLoad>
                <OnDragStart>
                    local mount = self:GetParent().mount
                    if mount.spellID then
                        PickupSpell(mount.spellID)
                    elseif mount.itemID then
                        PickupItem(mount.itemID)
                    end
                </OnDragStart>
            </Scripts>
        </Button>

        <CheckButton name="$parentFlag1" inherits="LM_OptionsUIMountsFlagTemplate" parentKey="flag1">
            <Anchors> <Anchor point="RIGHT" x="-2" /> </Anchors>
        </CheckButton>
        <CheckButton name="$parentFlag2" inherits="LM_OptionsUIMountsFlagTemplate" parentKey="flag2">
            <Anchors> <Anchor point="RIGHT" relativeTo="$parentFlag1" relativePoint="LEFT" x="-4" /> </Anchors>
        </CheckButton>
        <CheckButton name="$parentFlag3" inherits="LM_OptionsUIMountsFlagTemplate" parentKey="flag3">
            <Anchors> <Anchor point="RIGHT" relativeTo="$parentFlag2" relativePoint="LEFT" x="-4" /> </Anchors>
        </CheckButton>
        <CheckButton name="$parentFlag4" inherits="LM_OptionsUIMountsFlagTemplate" parentKey="flag4">
            <Anchors> <Anchor point="RIGHT" relativeTo="$parentFlag3" relativePoint="LEFT" x="-4" /> </Anchors>
        </CheckButton>
        <CheckButton name="$parentFlag5" inherits="LM_OptionsUIMountsFlagTemplate" parentKey="flag5">
            <Anchors> <Anchor point="RIGHT" relativeTo="$parentFlag4" relativePoint="LEFT" x="-4" /> </Anchors>
        </CheckButton>
        <CheckButton name="$parentFlag6" inherits="LM_OptionsUIMountsFlagTemplate" parentKey="flag6">
            <Anchors> <Anchor point="RIGHT" relativeTo="$parentFlag5" relativePoint="LEFT" x="-4" /> </Anchors>
        </CheckButton>
        <CheckButton name="$parentFlag7" inherits="LM_OptionsUIMountsFlagTemplate" parentKey="flag7">
            <Anchors> <Anchor point="RIGHT" relativeTo="$parentFlag6" relativePoint="LEFT" x="-4" /> </Anchors>
        </CheckButton>
    </Frames>

    <Layers>
        <Layer level="ARTWORK">
            <FontString name="$parentName" inherits="GameFontNormal" justifyH="LEFT" parentKey="name">
                <Anchors>
                    <Anchor point="LEFT" relativeKey="$parent.icon" relativePoint="RIGHT" x="4" />
                    <Anchor point="TOP" y="-2" />
                    <Anchor point="BOTTOMRIGHT" x="-2" y="2" />
                </Anchors>
            </FontString>
        </Layer>
    </Layers>

    <Frames>
    </Frames>

</Button>


<Frame name="LM_OptionsUIMountsPreview" parent="UIParent" hidden="true" frameStrata="TOOLTIP">
    <Size x="250" y="250" />
    <Anchors>
        <Anchor point="TOPLEFT" relativeTo="GameTooltip" relativePoint="BOTTOMLEFT" y="-4" />
    </Anchors>
    <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
        <EdgeSize val="16" />
        <TileSize val="16" />
        <BackgroundInsets>
            <AbsInset left="5" right="5" top="5" bottom="5"/>
        </BackgroundInsets>
    </Backdrop>
    <Frames>
       <PlayerModel name="$parentModel" parentKey="model">
            <Anchors>
                <Anchor point="TOPLEFT" x="8" y="-8" />
                <Anchor point="BOTTOMRIGHT" x="-8" y="8" />
            </Anchors>
            <Scripts>
                <OnLoad>
                    self:SetRotation(-MODELFRAME_DEFAULT_ROTATION)
                </OnLoad>
            </Scripts>
        </PlayerModel>
    </Frames>
    <Scripts>
        <OnLoad>
            self:SetBackdropBorderColor(TOOLTIP_DEFAULT_COLOR.r, TOOLTIP_DEFAULT_COLOR.g, TOOLTIP_DEFAULT_COLOR.b);
            self:SetBackdropColor(TOOLTIP_DEFAULT_BACKGROUND_COLOR.r, TOOLTIP_DEFAULT_BACKGROUND_COLOR.g, TOOLTIP_DEFAULT_BACKGROUND_COLOR.b);
        </OnLoad>
        <OnShow>
            local d = GameTooltip:GetWidth()
            self:SetSize(d, d)
        </OnShow>
    </Scripts>
</Frame>

<Frame name="LM_OptionsUIMounts" hidden="true" inherits="LM_OptionsUIPanelTemplate">

    <Frames>
        <ScrollFrame name="$parentScrollFrame" inherits="MinimalHybridScrollFrameTemplate" parentKey="scrollFrame">
            <Anchors>
                <Anchor point="TOPLEFT" x="16" y="-72" />
                <Anchor point="BOTTOMRIGHT" x="-32" y="36" />
            </Anchors>
            <Scripts>
                <OnLoad>
                    local track = _G[self.ScrollBar:GetName().."Track"]
                    track:Hide()
                </OnLoad>
                <OnSizeChanged function="LM_OptionsUIMountsScrollFrame_OnSizeChanged" />
            </Scripts>
        </ScrollFrame>

        <CheckButton name="$parentAllSelect" parentKey="allSelect">
            <Size x="32" y="32" />
            <Anchors>
                <Anchor point="BOTTOMLEFT" relativeTo="$parentScrollFrame" relativePoint="TOPLEFT" x="2" y="-2" />
            </Anchors>
            <Scripts>
                <OnClick function="LM_OptionsUIMounts_AllSelect_OnClick" />
                <OnEnter>
                    GameTooltip:SetOwner(self, "ANCHOR_RIGHT")
                    if not self:GetChecked() then
                        GameTooltip:SetText(CHECK_ALL, 0, 1, 0)
                    else
                        GameTooltip:SetText(CLEAR_ALL, 1, 0, 0)
                    end
                </OnEnter>
                <OnLeave>
                    GameTooltip:Hide()
                </OnLeave>
            </Scripts>
            <NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
            <PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
            <HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
            <CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
            <DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>
        </CheckButton>

        <Button name="$parentProfile" parentkey="profile" inherits="UIDropDownMenuTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="-204" y="-8" />
            </Anchors>
            <Scripts>
                <OnShow function="LM_OptionsUIMountsProfile_OnShow" />
            </Scripts>
        </Button>

        <EditBox name="$parentFilter" autofocus="false" inherits="SearchBoxTemplate" parentKey="filter">
            <Size x="180" y="26" />
            <Anchors>
                <Anchor point="BOTTOMLEFT" relativeTo="$parentScrollFrame" relativePoint="TOPLEFT" x="96" y="2" />
            </Anchors>
            <Scripts>
                <OnTextChanged>
                    SearchBoxTemplate_OnTextChanged(self)
                    LM_OptionsUIMounts_UpdateMountList()
                </OnTextChanged>
                <OnEnter>
                    GameTooltip:SetOwner(self, "ANCHOR_TOP")
                    GameTooltip:AddLine("Special filters, begin with:")
                    GameTooltip:AddLine("+fly / +run / +swim")
                    GameTooltip:AddLine("+enabled / +active")
                    GameTooltip:Show()
                </OnEnter>
                <OnLeave>
                    if GameTooltip:GetOwner() == self then
                        GameTooltip:Hide()
                    end
                </OnLeave>
            </Scripts>
        </EditBox>

    </Frames>

    <Layers>
        <Layer level="ARTWORK">
            <FontString name="$parentFlag1Text" inherits="GameFontWhiteTiny" justifyH="CENTER" text="Run">
                <Size x="26" y="26" />
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" relativeTo="$parentScrollFrame" relativePoint="TOPRIGHT" x="-2" />
                </Anchors>
            </FontString>
            <FontString name="$parentFlag2Text" inherits="GameFontWhiteTiny" justifyH="CENTER" text="Fly">
                <Size x="26" y="26" />
                <Anchors>
                    <Anchor point="RIGHT" relativeTo="$parentFlag1Text" relativePoint="LEFT" x="-4" />
                </Anchors>
            </FontString>
            <FontString name="$parentFlag3Text" inherits="GameFontWhiteTiny" justifyH="CENTER" text="Swim">
                <Size x="26" y="26" />
                <Anchors>
                    <Anchor point="RIGHT" relativeTo="$parentFlag2Text" relativePoint="LEFT" x="-4" />
                </Anchors>
            </FontString>
            <FontString name="$parentFlag4Text" inherits="GameFontWhiteTiny" justifyH="CENTER" text="AQ">
                <Size x="26" y="26" />
                <Anchors>
                    <Anchor point="RIGHT" relativeTo="$parentFlag3Text" relativePoint="LEFT" x="-4" />
                </Anchors>
            </FontString>
            <FontString name="$parentFlag5Text" inherits="GameFontWhiteTiny" justifyH="CENTER" text="Vash">
                <Size x="26" y="26" />
                <Anchors>
                    <Anchor point="RIGHT" relativeTo="$parentFlag4Text" relativePoint="LEFT" x="-4" />
                </Anchors>
            </FontString>
            <FontString name="$parentFlag6Text" inherits="GameFontWhiteTiny" justifyH="CENTER" text="C2">
                <Size x="26" y="26" />
                <Anchors>
                    <Anchor point="RIGHT" relativeTo="$parentFlag5Text" relativePoint="LEFT" x="-4" />
                </Anchors>
            </FontString>
            <FontString name="$parentFlag7Text" inherits="GameFontWhiteTiny" justifyH="CENTER" text="C1">
                <Size x="26" y="26" />
                <Anchors>
                    <Anchor point="RIGHT" relativeTo="$parentFlag6Text" relativePoint="LEFT" x="-4" />
                </Anchors>
            </FontString>
        </Layer>
    </Layers>

    <Scripts>
        <OnLoad function="LM_OptionsUIMounts_OnLoad" />
        <OnShow function="LM_OptionsUIMounts_OnShow" />
    </Scripts>

</Frame>

</Ui>
