<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

<!-- Copyright 2011-2016 Mike Battersby -->

<Script file="Macro.lua" />

<Button name="LiteMountItemButtonTemplate" virtual="true" inherits="ItemButtonTemplate">
    <Scripts>
        <OnEnter>
            if self.tooltipText then
                GameTooltip:SetOwner(self)
                GameTooltip:SetText(self.tooltipText)
                GameTooltip:Show()
            end
        </OnEnter>
        <OnLeave>
            GameTooltip:Hide()
        </OnLeave>
    </Scripts>
</Button>

<Frame name="LM_OptionsUIMacro" hidden="true" inherits="LM_OptionsUIPanelTemplate">

    <Frames>
        <Frame name="LM_OptionsUIMacroEditBoxContainer">

            <Size x="400" y="200" />


            <Anchors>
                <Anchor point="CENTER" />
            </Anchors>

            <Backdrop edgefile="Interface\Tooltips\UI-Tooltip-Border" bgfile="Interface\Tooltips\UI-Tooltip-Background" tile="true">
                <EdgeSize val="16" />
                <TileSize val="16" />
                <BackgroundInsets>
                    <AbsInset left="5" right="5" top="5" bottom="5" />
                </BackgroundInsets>
            </Backdrop>

            <Scripts>
                <OnLoad>
                    self:SetBackdropBorderColor(0.6, 0.6, 0.6, 1)
                    self:SetBackdropColor(0, 0, 0, 0.5)
                </OnLoad>
            </Scripts>

            <Frames>
                <EditBox name="LM_OptionsUIMacroEditBox" multiLine="true" letters="255" autoFocus="false" countInvisibleLetters="true">

                    <Anchors>
                        <Anchor point="TOPLEFT" x="8" y="-8" />
                        <Anchor point="BOTTOMRIGHT" x="-8" y="8" />
                    </Anchors>

                    <Scripts>
                        <OnTextChanged function="LM_OptionsUIMacro_OnTextChanged" />
                        <OnEscapePressed function="EditBox_ClearFocus" />
                        <OnLoad>
                            self.SetOption = function (self, v)
                                    return LM_Options:SetMacro(v)
                                end
                            self.GetOption = function (self)
                                    return LM_Options:GetMacro() or ""
                                end
                            self.GetOptionDefault = function (self)
                                    return ""
                                end
                            LM_OptionsUIControl_OnLoad(self, LM_OptionsUIMacro)
                        </OnLoad>
                    </Scripts>
                    <FontString inherits="GameFontHighlight" />
                </EditBox>
                <Button inherits="UIPanelButtonTemplate" text="DELETE">
                    <Size x="96" y="22" />
                    <Anchors>
                        <Anchor point="TOPRIGHT" relativePoint="BOTTOMRIGHT" x="-8" y="-3" />
                    </Anchors>
                    <Scripts>
                        <OnClick>
                            LM_OptionsUIMacroEditBox:SetText("")
                        </OnClick>
                    </Scripts>
                </Button>
            </Frames>
        </Frame>
    </Frames>

    <Layers>
        <Layer level="ARTWORK">
            <FontString inherits="GameFontNormal" justifyV="TOP" justifyH="LEFT" text="LM_MACRO_EXP">
                <Anchors>
                    <Anchor point="TOP" y="-48" />
                    <Anchor point="LEFT" relativePoint="LEFT" relativeTo="LM_OptionsUIMacroEditBoxContainer" x="-50" />
                    <Anchor point="RIGHT" relativePoint="RIGHT" relativeTo="LM_OptionsUIMacroEditBoxContainer" x="50" />
                    <Anchor point="BOTTOM" relativePoint="RIGHT" relativeTo="LM_OptionsUIMacroEditBoxContainer" />
                </Anchors>
            </FontString>

            <FontString inherits="GameFontHighlightSmall" text="ENTER_MACRO_LABEL">
                <Anchors>
                    <Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT" relativeTo="LM_OptionsUIMacroEditBoxContainer" x="8" y="3" />
                </Anchors>
            </FontString>

            <FontString name="LM_OptionsUIMacroCount" inherits="GameFontHighlightSmall">
                <Anchors>
                    <Anchor point="TOP" relativePoint="BOTTOM" relativeTo="LM_OptionsUIMacroEditBoxContainer" y="-3" />
                </Anchors>
            </FontString>
        </Layer>
    </Layers>

    <Scripts>
        <OnLoad function="LM_OptionsUIMacro_OnLoad" />
        <OnShow function="LM_OptionsUIMacro_OnShow" />
    </Scripts>
</Frame>

</Ui>
