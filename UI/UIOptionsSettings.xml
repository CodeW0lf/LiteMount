<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

<!-- Copyright 2011-2015 Mike Battersby -->

<Frame name="LiteMountOptionsSettings" hidden="true" inherits="LiteMountOptionsPanelTemplate">
    <Attributes>
        <Attribute name="panel-name" value="SETTINGS" />
    </Attributes>

    <Frames>
        <CheckButton name="$parentCopyTargetsMount" inherits="InterfaceOptionsCheckButtonTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" relativeTo="$parentTitle" relativePoint="BOTTOMLEFT" x="0" y="-24" />
            </Anchors>
            <Scripts>
                <OnLoad>
                    self.Text:SetText("Try to copy target's mount.")
                    self.SetOption = function (self, setting)
                            if setting == "1" then
                                LM_Options:CopyTargetsMount(true)
                            else
                                LM_Options:CopyTargetsMount(false)
                            end
                        end
                    self.GetOption = function (self)
                            LM_Options:CopyTargetsMount()
                        end
                    LiteMountOptionsControl_OnLoad(self)
                </OnLoad>
            </Scripts>
        </CheckButton>
        <CheckButton name="$parentExcludeNewMounts" inherits="InterfaceOptionsCheckButtonTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" relativeTo="$parentCopyTargetsMount" relativePoint="BOTTOMLEFT" x="0" y="-8" />
            </Anchors>
            <Scripts>
                <OnLoad>
                    self.Text:SetText("Automatically disable newly learned mounts.")
                    self.SetOption = function (self, setting)
                            if setting == "1" then
                                LM_Options:ExcludeNewMounts(true)
                            else
                                LM_Options:ExcludeNewMounts(false)
                            end
                        end
                    self.GetOption = function (self)
                        (LM_Options:ExcludeNewMounts()
                        end
                    LiteMountOptionsControl_OnLoad(self)
                </OnLoad>
            </Scripts>
        </CheckButton>
    </Frames>
</Frame>

</Ui>
