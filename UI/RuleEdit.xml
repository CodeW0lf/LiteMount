    <Frames>
        <Button parentkey="Type" inherits="UIMenuButtonStretchTemplate">
            <Size y="33" />
            <Anchors>
                <Anchor point="LEFT" x="16" />
                <Anchor point="RIGHT" relativePoint="CENTER" x="-8" />
            </Anchors>
        </Button>
        <Button parentkey="ArgDropDown" inherits="UIMenuButtonStretchTemplate" hidden="true">
            <Size y="33" />
