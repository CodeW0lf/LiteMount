<Script file="RuleEdit.lua" />

<Frame name="LiteMountRuleEdit" mixin="LiteMountRuleEditMixin" inherits="TooltipBackdropTemplate" frameStrata="DIALOG" parent="UIParent">

    <Size x="600" y="400" />

    <!-- XXX DEBUGGING XXX -->
    <Anchors> <Anchor point="TOP" y="-160" /> </Anchors>

    <Layers>
        <Layer level="ARTWORK">
            <FontString parentKey="Condition1Text" inherits="GameFontNormalHuge" text="Condition 1: ">
                <Anchors> <Anchor point="TOPLEFT" x="16" y="-32" /> </Anchors>
            </FontString>
            <FontString parentKey="Condition2Text" inherits="GameFontNormalHuge" text="Condition 2: ">
