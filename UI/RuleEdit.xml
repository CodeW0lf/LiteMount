                <Anchors> <Anchor point="TOPLEFT" x="16" y="-288" /> </Anchors>
            </FontString>
        </Layer>
    </Layers>

    <Frames>
        <Button parentkey="Condition1Type" inherits="UIDropDownMenuTemplate">
            <Size x="96" y="22" />
            <Anchors>
                <Anchor point="TOPLEFT" relativeKey="$parent.Condition1Text" relativePoint="BOTTOMLEFT" x="16" y="-6" />
            </Anchors>
        </Button>
        <Frame parentKey="DropDown" inherits="UIDropDownMenuTemplate" />
