<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

<Script file="Picker.lua" />

<Button name="LiteMountPickerMountButtonTemplate" virtual="true" inherits="LiteMountListButtonStyleTemplate">
    <Size y="22" />
    <NormalFont style="GameFontNormal" />
    <ButtonText justifyH="LEFT" wordWrap="false">
        <Anchors>
            <Anchor point="LEFT" x="8" />
            <Anchor point="RIGHT" x="-8" />
        </Anchors>
    </ButtonText>
    <HighlightTexture alphaMode="ADD">
        <Color r="0.3" g="0.5" b="1" a="0.3" />
    </HighlightTexture>
</Button>

<Button name="LiteMountPickerButtonTemplate" virtual="true">
    <Size y="22" />
    <Frames>
        <Button parentKey="mount2" inherits="LiteMountPickerMountButtonTemplate">
            <Anchors>
                <Anchor point="CENTER" />
            </Anchors>
        </Button>
        <Button parentKey="mount1" inherits="LiteMountPickerMountButtonTemplate">
            <Anchors>
                <Anchor point="LEFT" x="4" />
                <Anchor point="RIGHT" relativeKey="$parent.mount2" relativePoint="LEFT" x="-4" />
            </Anchors>
        </Button>
        <Button parentKey="mount3" inherits="LiteMountPickerMountButtonTemplate">
            <Anchors>
                <Anchor point="LEFT" relativeKey="$parent.mount2" relativePoint="RIGHT" x="4" />
                <Anchor point="RIGHT" x="-4" />
            </Anchors>
        </Button>
    </Frames>
</Button>
                    
<Frame name="LiteMountPicker" mixin="LiteMountPickerMixin" parent="UIParent" inherits="LiteMountContainerStyleTemplate" hidden="true">
    <Size x="623" y="568" />
    <Anchors>
        <Anchor point="CENTER" y="80" />
    </Anchors>
    <Scripts>
        <OnLoad inherit="prepend" method="OnLoad" />
        <OnShow inherit="prepend" method="OnShow" />
        <OnHide inherit="prepend" method="OnHide" />
        <OnSizeChanged inherit="prepend" method="OnSizeChanged" />
    </Scripts>
    <Frames>
        <ScrollFrame name="$parentScroll" parentKey="Scroll" inherits="MinimalHybridScrollFrameTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" x="8" y="-80" />
                <Anchor point="BOTTOMRIGHT" x="-24" y="8" />
            </Anchors>
        </ScrollFrame>
    </Frames>
</Frame>

</Ui>
