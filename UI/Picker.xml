<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

<Script file="Picker.lua" />

<Button name="LiteMountPickerButtonTemplate" virtual="true" mixin="LiteMountPickerButtonMixin" inherits="UIMenuButtonStretchTemplate">
    <Scripts>
        <OnClick method="OnClick" />
    </Scripts>

    <Size y="22" />

    <Layers>
        <Layer level="OVERLAY">
            <Texture parentKey="Icon">
                <Size x="14" y="14" />
                <Anchors><Anchor point="LEFT" x="8" /></Anchors>
            </Texture>
            <FontString parentKey="Text" inherits="GameFontHighlightSmall" justifyH="LEFT" wordwrap="false">
                <Anchors>
                    <Anchor point="LEFT" relativePoint="RIGHT" relativeKey="$parent.Icon" x="4" />
                    <Anchor point="RIGHT" x="-8" />
                </Anchors>
            </FontString>
        </Layer>
    </Layers>

</Button>
                    
<Frame name="LiteMountPicker" hidden="true" mixin="LiteMountPickerMixin" parent="UIParent">
    <Size x="623" y="568" />
    <Anchors>
        <Anchor point="CENTER" />
    </Anchors>
    <Scripts>
        <OnLoad method="OnLoad" />
        <OnShow method="OnShow" />
        <OnSizeChanged method="OnSizeChanged" />
    </Scripts>
    <Frames>
        <ScrollFrame name="$parentScroll" parentKey="Scroll" inherits="MinimalHybridScrollFrameTemplate">
            <Anchors>
                <Anchor point="TOPLEFT" x="8" y="-8" />
                <Anchor point="BOTTOMRIGHT" x="-24" y="8" />
            </Anchors>
        </ScrollFrame>
    </Frames>
    <Layers>
        <Layer level="ARTWORK">
            <Texture>
                <Color r="0.1" g="0.1" b="0.1" />
                <Anchors>
                    <Anchor point="TOPLEFT" />
                    <Anchor point="BOTTOMRIGHT" />
                </Anchors>
            </Texture>
        </Layer>
    </Layers>
</Frame>

</Ui>
