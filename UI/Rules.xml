<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

<!-- Copyright 2011-2021 Mike Battersby -->

<Script file="Rules.lua" />

<Button name="LiteMountRuleButtonTemplate" virtual="true" mixin="LiteMountRuleButtonMixin" inherits="BackdropTemplate">
    <KeyValues>
        <KeyValue key="backdropInfo" value="BACKDROP_TOOLTIP_8_8_1111" type="global" />
        <KeyValue key="backdropColor" value="DARKGRAY_COLOR" type="global"/>
        <KeyValue key="backdropColorAlpha" value="0.3" type="number" />
        <KeyValue key="backdropBorderColor" value="DARKGRAY_COLOR" type="global"/>
        <KeyValue key="backdropBorderColorAlpha" value="0.3" type="number" />
    </KeyValues>
    <Size y="66" />
    <Scripts>
        <OnShow method="OnShow" inherit="prepend" />
        <OnShow method="OnLoad" inherit="prepend" />
    </Scripts>

    <Layers>
        <Layer level="ARTWORK">
            <FontString parentKey="NumText" inherits="GameFontNormal" justifyH="LEFT">
                <Size x="24" />
                <Anchors>
                    <Anchor point="LEFT" x="16" />
                </Anchors>
            </FontString>
        </Layer>
    </Layers>
    <Frames>
        <Button parentKey="Condition" inherits="UIMenuButtonStretchTemplate">
            <Size x="93" y="33" />
            <Anchors> <Anchor point="LEFT" relativeKey="$parent.NumText" relativePoint="RIGHT" x="8" /> </Anchors>
            <NormalFont style="GameFontNormal" />
            <HighlightFont style="GameFontNormal" />
        </Button>
        <Button parentKey="ConditionArg" inherits="UIMenuButtonStretchTemplate">
            <Size x="132" y="33" />
            <Anchors> <Anchor point="LEFT" relativeKey="$parent.Condition" relativePoint="RIGHT" x="8" /> </Anchors>
            <NormalFont style="GameFontHighlight" />
            <HighlightFont style="GameFontHighlight" />
        </Button>
        <Button parentKey="Action" inherits="UIMenuButtonStretchTemplate">
            <Size x="93" y="33" />
            <Anchors> <Anchor point="LEFT" relativeKey="$parent.ConditionArg" relativePoint="RIGHT" x="8" /> </Anchors>
            <NormalFont style="GameFontNormal" />
            <HighlightFont style="GameFontNormal" />
        </Button>
        <Button parentKey="ActionArg" inherits="UIMenuButtonStretchTemplate">
            <Size x="132" y="33" />
            <Anchors> <Anchor point="LEFT" relativeKey="$parent.Action" relativePoint="RIGHT" x="8" /> </Anchors>
            <NormalFont style="GameFontHighlight" />
            <HighlightFont style="GameFontHighlight" />
        </Button>
    </Frames>
</Button>

<Frame name="LiteMountRulesPanel" hidden="true" inherits="LiteMountOptionsPanelTemplate" mixin="LiteMountRulesPanelMixin">

    <Layers>
        <Layer level="ARTWORK">
            <FontString parentKey="ExplainText" inherits="GameFontNormal" justifyV="TOP" justifyH="LEFT" text="LM_RULES_EXP">
                <Anchors>
                    <Anchor point="TOP" y="-48" />
                    <Anchor point="LEFT" x="48" />
                    <Anchor point="RIGHT" x="-48" />
                </Anchors>
            </FontString>
        </Layer>
    </Layers>

    <Frames>
        <ScrollFrame parentKey="Scroll" inherits="MinimalHybridScrollFrameTemplate" mixin="LiteMountRulesScrollMixin">
            <Anchors>
                <Anchor point="TOPLEFT" x="16" y="-120" />
                <Anchor point="BOTTOMRIGHT" x="-34" y="48" />
            </Anchors>
            <Scripts>
                <OnLoad method="OnLoad" />
            </Scripts>
        </ScrollFrame>

        <Frame parentkey="BindingDropDown" inherits="UIDropDownMenuTemplate">
            <Size x="93" y="22" />
            <Anchors>
                <Anchor point="BOTTOMLEFT" relativePoint="TOPLEFT" relativeKey="$parent.Scroll" x="-8" />
            </Anchors>
        </Frame>

        <!-- all of the buttons share this one dropdown -->
        <Frame parentKey="RuleDropDown" inherits="UIDropDownMenuTemplate" />
    </Frames>

    <Scripts>
        <OnLoad method="OnLoad" />
        <OnSizeChanged method="OnSizeChanged" />
    </Scripts>
</Frame>

</Ui>
